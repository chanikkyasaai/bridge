# BRIDGE ML-Engine Environment Configuration
# Copy this file to .env and customize for your environment

# Environment Settings
BRIDGE_ENV=development  # development, staging, production

# Model Paths
MODEL_BASE_PATH=./models/
FAISS_INDEX_PATH=./faiss/indexes/
TRANSFORMER_MODEL_PATH=./transformers/
GNN_MODEL_PATH=./gnn/

# Performance Settings
MAX_CONCURRENT_SESSIONS=1000
INFERENCE_BATCH_SIZE=16
CACHE_SIZE=10000

# Security Settings
ENCRYPTION_KEY_SIZE=256
VECTOR_ENCRYPTION=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=bridge_ml_engine.log

# API Settings
API_HOST=0.0.0.0
API_PORT=8001

# Database (optional)
# DATABASE_URL=sqlite:///bridge_ml_engine.db
# REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
# PROMETHEUS_PORT=9090
# GRAFANA_ENABLED=false

# Development Settings (only for BRIDGE_ENV=development)
DEV_MOCK_MODELS=false
DEV_FAST_STARTUP=true
DEV_DETAILED_LOGGING=true
